<Window x:Class="PractosOne.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PractosOne"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        

        <GroupBox Grid.Column="1" Header="Вычисления" Grid.Row="1">
            <Grid x:Name="tb_Summ">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button x:Name="btnFill" Content="Заполнить" Height="50" Width="150" Grid.Row="3" Click="btnFill_Click" Background="Green"/>
                <Button x:Name="btnClear" Content="Стереть" Height="50" Width="150" Grid.Row="3" Grid.Column="1" Click="btnClear_Click" Background="Red"/>
                <TextBox x:Name="tbSumm" Height="50" TextWrapping="Wrap" Width="150" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" IsReadOnly="True" />
                <Button x:Name="btnCalc" Content="Рассчитать" Height="50" Width="150" Grid.Row="2" Click="btnCalc_Click" Background="Purple"/>
                <Label Content="Сумма:" Width="200" Height="50" Grid.Column="1" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Bottom" />
                <Label Content="Введите кол-во чисел:" Width="200" Height="50" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Bottom" />
                
                <TextBox x:Name="tbKol" Height="50" TextWrapping="Wrap" Width="150" Grid.Row="1" VerticalAlignment="Top" />
            </Grid>
        </GroupBox>
        <DataGrid x:Name="dataGrid" CellEditEnding="DataGrid_CellEditEnding" Grid.Row="1"/>

        <Menu Grid.ColumnSpan="2" Height="25" >
            <MenuItem x:Name="miInfo" Header="О программе" Height="25" Click="miInfo_Click"/>
            <MenuItem x:Name="miSave" Header="Сохранить" Height="25" Click="miSave_Click"/>
            <MenuItem x:Name="miOpen" Header="Открыть" Height="25" Click="miOpen_Click"/>
            <Separator Width="5"/>
            <MenuItem x:Name="miExit" Header="Выход" Height="25" Click="miExit_Click"/>
        </Menu>

    </Grid>
</Window>
